<h1>Edit</h1>
<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @post do |f| %>
  <div class="">
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>
  <div class="">
    <%= f.label :body%>
    <%= f.text_field :body%>
  </div>
  <div class="form-group">
    <%= f.label :Image%>
    <%= f.text_field :image, class: "form-control"%>
  </div>
  <%= f.submit %>
<% end %>


<% if flash[:notice] %>
  <%= flash[:notice] %>
<% else %>
  <%= flash[:alert] %>
<% end  %>
